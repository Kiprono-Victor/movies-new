@model MOVIEW.Models.Movies

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Movies</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="strId" />
            <div class="form-group">
                <label asp-for="strMovieName" class="control-label"></label>
                <input asp-for="strMovieName" class="form-control" />
                <span asp-validation-for="strMovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="strPrice" class="control-label"></label>
                <input asp-for="strPrice" class="form-control" />
                <span asp-validation-for="strPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="strDescription" class="control-label"></label>
                <input asp-for="strDescription" class="form-control" />
                <span asp-validation-for="strDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

