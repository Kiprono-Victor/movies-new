@model IEnumerable<MOVIEW.Models.Movies>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.strMovieName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.strDescription)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.strMovieName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strimageurl)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.strId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.strId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.strId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
