@model MOVIEW.Models.Register

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <div class="button_classic shaddo p-3">
            <h5 style="text-align:center">To register for an Account, kindly fill the form bellow</h5>

            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group ">
                    <label asp-for="FullName" class="control-label"></label>
                    <input asp-for="FullName" placeholder="Enter FullName "class="form-control custome_input" />
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Location" class="control-label"></label>
                    <input asp-for="Location" placeholder="Enter Location "class="form-control custome_input" />
                    <span asp-validation-for="Location" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Username" class="control-label"></label>
                    <input asp-for="Username" placeholder="Enter Username "class="form-control custome_input" />
                    <span asp-validation-for="Username" class="text-danger "></span>
                </div>
                <div class="form-group">
                    <label asp-for="Password" class="control-label"></label>
                    <input asp-for="Password" placeholder="Enter Password "class="form-control custome_input" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-default btn-sm btn-outline-warning ml-3 search2 "><i class="fa fa-cloud-upload" aria-hidden="true"></i>&nbsp;Submit</button>
                </div>
            </form>
        </div>
    </div>
    </div>


    <div>
        <a asp-action="Index">Back to List</a>
    </div>

<div class="col-md-4"></div>
